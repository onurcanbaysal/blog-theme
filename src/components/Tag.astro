---
import { sluglify } from '@/utils'

export interface Props {
	tag: string
}
const { tag } = Astro.props
---

<a href={`/tags/${sluglify(tag)}`} aria-label={tag}>
	<span
		class='bg-blue-600 font-semibold text-white dark:bg-blue-900 dark:text-white shadow text-sm w-fit px-2 py-1 md:px-5 md:py-2 rounded-full'
	>
		{tag ?? 'Blog Tag'}
	</span>
</a>
