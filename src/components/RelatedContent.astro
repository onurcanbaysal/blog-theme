---
import { Image } from 'astro:assets';

interface Props {
	title: string;
	description: string;
	image: ImageMetadata | string;
	imageAlt: string;
	link: string;
	eyebrow?: string;
}

const { 
	title, 
	description, 
	image,
	imageAlt,
	link,
	eyebrow = "Zbirka"
} = Astro.props;

// Helper to determine if the image is a local import or URL
const isLocalImage = typeof image === 'object';
---

<section class="related-content">
	<a href={link} class="related-content__wrapper">
		<div class="related-content__content-wrapper">
			<div class="related-content__image-container">
				{isLocalImage ? (
					<Image 
						src={image} 
						alt={imageAlt}
						width={225}
						height={170}
						format='webp'
						quality={85}
					/>
				) : (
					<img 
						src={image} 
						alt={imageAlt}
						width="225"
						height="170"
						loading="lazy"
					/>
				)}
			</div>
			
			<div class="related-content__text-content">
				<div class="related-content__header">
					<p class="eyebrow">{eyebrow}</p>
					<h3 class="related-content__title">{title}</h3>
				</div>
				
				<div class="related-content__body">
					<p class="related-content__text">{description}</p>
					<div class="related-content__cta">
						<span>Veƒç</span>
						<svg 
							xmlns="http://www.w3.org/2000/svg" 
							width="16" 
							height="16" 
							viewBox="0 0 24 24" 
							fill="none" 
							stroke="currentColor" 
							stroke-width="2" 
							stroke-linecap="round" 
							stroke-linejoin="round"
						>
							<circle cx="12" cy="12" r="10"/>
							<path d="M12 16l4-4-4-4"/>
							<path d="M8 12h8"/>
						</svg>
					</div>
				</div>
			</div>
		</div>
	</a>
</section>

<style>
	.related-content {
		width: 100%;
		max-width: 600px;
		margin: 0 auto;
		padding: 1rem;
	}

	.related-content__wrapper {
		display: block;
		text-decoration: none;
		color: inherit;
		background: var(--rc-bg);
		border-radius: 12px;
		overflow: hidden;
		transition: all 0.2s ease;
		border: 1px solid var(--rc-border);
	}

	.related-content__wrapper:hover {
		transform: translateY(-2px);
		box-shadow: 0 4px 12px var(--rc-shadow);
	}

	.related-content__content-wrapper {
		display: flex;
		gap: 1.25rem;
		padding: 1rem;
		align-items: center;
	}

	.related-content__image-container {
		flex-shrink: 0;
		width: 225px;
		height: 170px;
		border-radius: 8px;
		overflow: hidden;
		aspect-ratio: 16/9;
	}

	.related-content__image-container :global(img) {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: transform 0.3s ease;
	}

	.related-content__wrapper:hover .related-content__image-container :global(img) {
		transform: scale(1.05);
	}

	.related-content__text-content {
		flex: 1;
		min-width: 0;
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
		padding: 0.25rem 0;
	}

	.related-content__header {
		display: flex;
		flex-direction: column;
		gap: 0.25rem;
	}

	.eyebrow {
		font-size: 0.75rem;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.05em;
		color: var(--rc-text);
		margin: 0;
	}

	.related-content__title {
		font-size: 1.25rem;
		font-weight: 600;
		margin: 0;
		color: var(--rc-heading);
		line-height: 1.3;
	}

	.related-content__body {
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
	}

	.related-content__text {
		font-size: 0.875rem;
		line-height: 1.5;
		color: var(--rc-text);
		margin: 0;
	}

	.related-content__cta {
		display: flex;
		align-items: center;
		gap: 0.375rem;
		font-weight: 500;
		color: var(--rc-primary);
		font-size: 0.875rem;
	}

	.related-content__cta svg {
		transition: transform 0.2s ease;
	}

	.related-content__wrapper:hover .related-content__cta svg {
		transform: translateX(4px);
	}

	@media (prefers-reduced-motion: reduce) {
		.related-content__wrapper,
		.related-content__cta svg,
		.related-content__image-container :global(img) {
			transition: none;
		}
	}

	/* Tablet breakpoint */
	@media (max-width: 768px) {
		.related-content {
			padding: 0.75rem;
		}

		.related-content__content-wrapper {
			padding: 0.75rem;
			gap: 1rem;
		}

		.related-content__image-container {
			width: 200px;
		}

		.related-content__title {
			font-size: 1.125rem;
		}
	}

	/* Mobile breakpoint */
	@media (max-width: 640px) {
		.related-content__content-wrapper {
			flex-direction: column;
		}

		.related-content__image-container {
			width: 100%;
		}

		.related-content__text-content {
			padding: 0;
		}

		.related-content__header {
			text-align: center;
		}

		.related-content__body {
			text-align: center;
		}

		.related-content__cta {
			justify-content: center;
		}
	}
</style> 