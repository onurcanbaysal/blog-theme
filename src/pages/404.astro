---
import BaseLayout from '@/layouts/BaseLayout.astro'
import { Image } from 'astro:assets'
---

<BaseLayout title="404 Not Found">
    <section class="bg-white dark:bg-[#0a0910] min-h-screen flex items-center">
        <div class="container px-6 py-12 mx-auto lg:flex lg:items-center lg:gap-16">
            <div class="w-full lg:w-1/2 animate-fadeIn">
                <div class="space-y-5">
                    <p class="inline-block px-3 py-1 text-sm font-medium text-blue-500 dark:text-blue-400 bg-blue-50 dark:bg-blue-900/30 rounded-full">
                        404 napaka
                    </p>
                    <h1 class="text-4xl font-bold text-gray-800 dark:text-white md:text-5xl">
                        Stran ne obstaja
                    </h1>
                    <p class="text-lg text-gray-500 dark:text-gray-400">
                        Oprostite, stran, ki ste jo zahtevali, ne obstaja. Preverite vpisani naslov ali uporabite spodnje povezave:
                    </p>
                </div>

                <div class="flex flex-col sm:flex-row items-center mt-8 gap-4">
                    <button 
                        onclick="history.back()" 
                        class="w-full sm:w-auto px-6 py-3 text-sm font-medium text-gray-700 transition-all duration-200 bg-white border-2 border-gray-200 rounded-lg hover:bg-gray-50 hover:border-gray-300 focus:ring-2 focus:ring-offset-2 focus:ring-gray-200 dark:hover:bg-gray-800 dark:bg-gray-900 dark:text-gray-200 dark:border-gray-700 dark:hover:border-gray-600 flex items-center justify-center gap-2"
                    >
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5 rtl:rotate-180">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 15.75L3 12m0 0l3.75-3.75M3 12h18" />
                        </svg>
                        <span>Nazaj</span>
                    </button>

                    <a 
                        href="/" 
                        class="w-full sm:w-auto px-6 py-3 text-sm font-medium tracking-wide text-white transition-all duration-200 bg-blue-600 rounded-lg hover:bg-blue-700 focus:ring-2 focus:ring-offset-2 focus:ring-blue-600 dark:hover:bg-blue-500 dark:bg-blue-600 text-center"
                    >
                        NAZAJ NA NASLOVNICO
                    </a>
                </div>
            </div>

            <div class="relative w-full mt-12 lg:mt-0 lg:w-1/2">
                <Image 
                    src="/404-cake.webp" 
                    alt="404 Napaka - Sladka tortica" 
                    width={800}
                    height={450}
                    format='webp'
                    quality={85}
                    class="w-full lg:h-[32rem] h-80 md:h-96 rounded-lg object-cover shadow-xl transition-transform duration-300 hover:scale-[1.02]"
                />
            </div>
        </div>
    </section>
</BaseLayout>

<style>
    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
    
    .animate-fadeIn {
        animation: fadeIn 0.6s ease-out forwards;
    }
</style>